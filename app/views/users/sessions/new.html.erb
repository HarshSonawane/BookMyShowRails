<h2>Log in</h2>

<%= form_for(resource, as: resource_name, class: 'class="row g-3 align-items-center', url: session_path(resource_name)) do |f| %>

  <div class="col-md-12">
    <label for="inputEmail" class="form-label">Email</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", id: 'inputEmail', class: "form-control" %>
  </div>

  <div class="col-md-12">
    <label for="inputPassword" class="form-label">Password</label>
    <%= f.password_field :password, placeholder: "Password", id: "inputPassword", autocomplete: "current-password", class: "form-control" %>
  </div>

  

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-danger" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
