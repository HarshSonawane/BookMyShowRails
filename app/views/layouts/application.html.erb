<!DOCTYPE html>
<html>
  <head>
    <title>Bookmy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%= root_path %>">MookBy</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="<%= root_path %>">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= root_path %>">Trending</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="<%= root_path %>" tabindex="-1" aria-disabled="true">Shows</a>
        </li>
      </ul>
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      </form>
      <% if user_signed_in? %>
          <a href="<%= edit_user_registration_path %>" class="btn btn-outline-light me-2"> <%= current_user.name %> </a>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-danger'  %>
        <% else %>
          <a href="<%= new_user_session_path %>" class="btn btn-outline-light me-2"> Login </a>
          <a href="<%= new_user_registration_path %>" class="btn btn-danger"> Sign Up</a>
        <% end %>
    </div>
  </div>
</nav>

  <div>
  <p></p>
  </div>
  <div class="container-fluid">
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <%= yield %>
  </div>
  </body>
</html>
